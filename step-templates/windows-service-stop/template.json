{
  "Id": "ActionTemplates-33",
  "Name": "Windows Service - Stop",
  "Description": "Stops a Windows Service if it is running.",
  "ActionType": "Octopus.Script",
  "Version": 1,
  "Properties": {
    "Octopus.Action.Script.ScriptBody": "$serviceName = $OctopusParameters['ServiceName']\r\r$serviceInstance = Get-Service $serviceName -ErrorAction SilentlyContinue\rif ($serviceInstance -ne $null) {\r    stop-service $serviceInstance -Force\r}\r"
  },
  "SensitiveProperties": {},
  "Parameters": [
    {
      "Name": "ServiceName",
      "Label": "Service Name",
      "HelpText": "Name of the Windows Service (this is not always the display name).",
      "DefaultValue": null
    }
  ],
